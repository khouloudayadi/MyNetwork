<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/divider"
    android:layout_height="match_parent"
    tools:context=".timeConnectiviteActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@android:color/white"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_cameraTargetLat="35.9980277"
            app:mapbox_cameraTargetLng="10.3921591"
            app:mapbox_cameraZoom="8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_location_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:tint="@color/colorPrimary"
                app:fabSize="mini"
                app:backgroundTint="@android:color/white"
                app:srcCompat="@android:drawable/ic_search_category_default" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:tint="@color/colorPrimary"
                app:fabSize="mini"
                app:backgroundTint="@android:color/white"
                app:srcCompat="@drawable/ic_my_location_24"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_Time"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/fab_navigation"
                android:layout_marginBottom="-10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:visibility="gone"
                android:backgroundTint="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:id="@+id/img_speech"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_speech_off_24"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="60dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:layout_height="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:id="@+id/txt_time_connectivite"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:textColor="@android:color/holo_blue_dark"
                            android:text="12 min"
                            android:textSize="25sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/txt_distance_connectivite"
                            android:fontFamily="serif"
                            android:textColor="@color/color_text"
                            android:text="6 km"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_close"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_close" />
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_navigation"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_navigation_24"
                            app:tint="@android:color/holo_blue_dark" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>

