<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mapCoverageActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginTop="2dp"
        android:layout_height="match_parent">
        <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="35.9980277"
        mapbox:mapbox_cameraTargetLng="10.3921591"
        mapbox:mapbox_cameraZoom="14"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:text="@string/coverage_date"
                android:id="@+id/txt_couv"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_height="33dp"
                android:visibility="gone"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/backgroung_icon_rx"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:id="@+id/layout_sans_conx"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/error_map_coverage"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center|bottom"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            android:id="@+id/card_legend"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="200dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C66AA"
                    android:layout_marginTop="5dp"
                    android:text="2G"
                    android:textSize="28sp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-condensed-light" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFA01E"
                    android:text="3G"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="28sp"
                    android:layout_marginLeft="14dp"
                    android:fontFamily="sans-serif-condensed-light" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2C9F3C"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="4G"
                    android:textSize="28sp"
                    android:layout_marginLeft="14dp"
                    android:fontFamily="sans-serif-condensed-light" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>