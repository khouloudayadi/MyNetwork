<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="@dimen/padding_layout_network"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_type_network"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/ic_no_internet"
            app:tint="@color/backgroung_icon_rx" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_nom_operateur"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:id="@+id/txt_sub_type_network"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="3dp"
        android:background="@android:color/background_dark"
        android:layout_height="wrap_content"
        android:id="@+id/layout_absence_connx"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/distance_to_cell"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:id="@+id/txt_distance_to_cell"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="m"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/signal_excellent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signal"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
           android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="@string/signal_strength_excellent"
                android:id="@+id/txt_signal"
                android:textSize="16sp"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:textStyle="italic"
                android:layout_marginLeft="3dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/img_drop_down"
                android:src="@drawable/ic_arrow_drop_down_24"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/desc_signal_excellent"
            android:id="@+id/txt_descr_signal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:id="@+id/coordinator_layout_time"
        android:layout_height="match_parent">
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_cameraTargetLat="35.9980277"
            app:mapbox_cameraTargetLng="10.3921591"
            app:mapbox_cameraZoom="8"/>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:orientation="vertical">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_info_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_outline_24"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_location_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    app:backgroundTint="@android:color/white"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_search_category_default" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_my_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_my_location_24"
                    android:tint="@color/colorPrimary"
                    app:backgroundTint="@android:color/white"
                    app:fabSize="mini" />
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fab_navigation"
                        android:layout_marginBottom="-10dp"
                        android:backgroundTint="@android:color/white"
                        android:visibility="gone"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="9dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="60dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="5dp"
                                    android:textColor="@android:color/black"
                                    android:text="@string/dispo_conn"
                                    android:textSize="17sp"
                                    android:fontFamily="sans-serif-black"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="10"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txt_time_connectivite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:layout_gravity="center"
                                    android:text="12 min"
                                    android:layout_weight="5"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txt_distance_connectivite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="5"
                                    android:fontFamily="serif"
                                    android:layout_gravity="center"
                                    android:text="( 6 km )"
                                    android:textColor="@color/color_text"
                                    android:textSize="20sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/img_navigation"
                                    android:layout_margin="5dp"
                                    android:layout_width="30dp"
                                    android:layout_weight="1"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_near_me_24"
                                    app:tint="@color/backgroung_icon_rx" />
                                <ImageView
                                    android:id="@+id/img_speech"
                                    android:layout_width="30dp"
                                    android:layout_height="33dp"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    app:tint="@color/backgroung_icon_rx"
                                    android:src="@drawable/ic_speech_off_24" />
                                <ImageView
                                    android:id="@+id/img_detail"
                                    android:layout_margin="5dp"
                                    android:layout_width="32dp"
                                    android:layout_weight="1"
                                    android:layout_height="33dp"
                                    android:src="@drawable/ic_info_outline_24"
                                    app:tint="@color/backgroung_icon_rx"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>